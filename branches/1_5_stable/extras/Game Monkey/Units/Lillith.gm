//------------------------------------LillithText---------------------//
global LillithText = function(plr)
{
  // We dont use a function type as its later set in RegisterUnitEvent
  //Send that message!
	.SendChatMessage("You have disturbed my rest. Now face my wrath!");
	// Despawn in 3 minutes (1000 = 1 second)
	.Despawn(180000, 0);
};

